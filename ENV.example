# KadeDB Environment Configuration
# Copy this file to .env and update the values as needed

# ===== Required Configuration =====

# Database configuration
DB_URI=postgresql://username:password@localhost:5432/kadedb

# Logging level (debug, info, warn, error, critical)
LOG_LEVEL=info

# ===== Optional Configuration =====

# Cache size in MB (default: 1024)
CACHE_SIZE=1024

# Maximum database connections (default: 10)
MAX_CONNECTIONS=10

# ===== Development Settings =====

# Enable development mode (default: false)
DEV_MODE=false

# Debug port for remote debugging
DEBUG_PORT=5678

# ===== API Keys (if applicable) =====
# Add any API keys needed for external services
# EXAMPLE_API_KEY=your_api_key_here

# ===== System Settings =====

# Number of worker threads (0 = auto-detect)
WORKER_THREADS=0

# Enable profiling (true/false)
ENABLE_PROFILING=false
